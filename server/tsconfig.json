{
  "compilerOptions": {
    // Target and Module
    "target": "ES2020",
    "module": "commonjs",

    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Output Options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict Type-Checking Options
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    // Module Resolution
    "moduleResolution": "node",
    "lib": ["ES2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
